 /* FONTS
-------------------------------------------------------------------------------*/
@font-face {	font-family: 'Din Display Pro';
	src: url('/assets/fonts/din-display-light.eot');
	src: url('/assets/fonts/din-display-light.eot?#iefix') format('embedded-opentype'),
		 url('/assets/fonts/din-display-light.woff') format('woff'),
		 url('/assets/fonts/din-display-light.ttf') format('truetype');
	font-weight:300;
	font-style:normal;
}

@font-face {
	font-family: 'Din Display Pro';
	src: url('/assets/fonts/din-display-regular.eot');
	src: url('/assets/fonts/din-display-regular.eot?#iefix') format('embedded-opentype'),
		 url('/assets/fonts/din-display-regular.woff') format('woff'),
		 url('/assets/fonts/din-display-regular.ttf') format('truetype');
