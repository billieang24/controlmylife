aside
{
	float:left;
	height:275px;
	width:30%;
	overflow-y: scroll;
}
.person-info
{
	margin: 25px 10px 5px 80px;
	color: lightblue;
	font-size: 20px;
	
}
.time-people
{
	font-size: 14px;
	font-style: italic;
}

.info 
{
	border:1px solid #a8a8a8;
	margin:10px 10px 10px 0px;
	padding:12px 10px;
}

.image {
	float: left;
	height: 85px;
	margin-right: 10px;
	margin-top: -2px;
	width: 80px;
	
}

.clearfix:after 
{
    clear: both;
    content: ".";
    display: block;
    height: 0;
    line-height: 0;
    visibility: hidden;
}


.main
{
	margin-left: 300px;
}

.place
{
	height: 40px;
	margin: 10px 7px 15px 0px;
	width: 295px;
}

#map
{
	border: 1px solid #a8a8a8;
	height: 350px;
	margin-bottom: 10px;
	width: 600px;
}

.notify
{
	float: right;
	margin-right:20px;
}


